---
import BaseLayout from '../layouts/BaseLayout.astro';
import ArticleCard from '../components/ArticleCard.astro';
import { articles, getFeaturedArticles } from '../data/articles';

const featured = getFeaturedArticles();
const recent = articles.filter(a => !a.featured).slice(0, 4);
---

<BaseLayout title="Your Trusted UK Dog Care Guide" description="My Mutt Life ‚Äî Expert guides on dog food, health, insurance, and wellbeing for UK dog owners. Honest reviews, practical advice, no nonsense.">
  <!-- Hero Section with Background Image -->
  <section class="relative text-white overflow-hidden">
    <!-- Background image -->
    <div class="absolute inset-0">
      <img
        src="/images/poppy/poppy-grass-classic.jpg"
        alt="Poppy the black Labrador on grass with tongue out ‚Äî the face behind My Mutt Life"
        class="w-full h-full object-cover"
        loading="eager"
        decoding="async"
      />
      <div class="absolute inset-0 bg-gradient-to-r from-forest-900/85 via-forest-800/75 to-forest-700/65"></div>
    </div>

    <div class="relative max-w-6xl mx-auto px-4 sm:px-6 py-20 sm:py-28 lg:py-36 text-center">
      <p class="text-forest-200 text-sm sm:text-base font-medium uppercase tracking-wider mb-4">Where Style Meets Wagging Tails</p>
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold leading-tight mb-6" style="font-family: var(--font-heading); color: white;">
        Honest Dog Care<br>
        <span class="text-cream-300">For Real Dog People</span>
      </h1>
      <p class="text-lg sm:text-xl text-forest-100 max-w-2xl mx-auto mb-8 leading-relaxed">
        Expert guides on nutrition, health, and wellbeing for UK dog owners. No jargon. No fluff.
        Just practical advice to help your dog live their best life.
      </p>
      <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
        <a href="/blog/" class="bg-white text-forest-700 px-8 py-3.5 rounded-full font-semibold hover:bg-cream-100 transition-colors text-lg">
          Browse Articles
        </a>
        <a href="/about/" class="text-white border-2 border-white/30 px-8 py-3.5 rounded-full font-semibold hover:bg-white/10 transition-colors text-lg">
          Meet the Team
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Articles -->
  <section class="max-w-6xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
    <div class="flex items-center justify-between mb-8">
      <div>
        <h2 class="text-2xl sm:text-3xl font-bold text-bark-800" style="font-family: var(--font-heading)">
          Featured Guides
        </h2>
        <p class="text-bark-500 mt-1">Our most popular and comprehensive articles</p>
      </div>
      <a href="/blog/" class="hidden sm:inline-flex items-center gap-1 text-forest-600 font-medium hover:text-forest-800 transition-colors">
        View all
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
      </a>
    </div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
      {featured.map(article => (
        <ArticleCard
          title={article.title}
          description={article.description}
          slug={article.slug}
          category={article.category}
          readTime={article.readTime}
          emoji={article.emoji}
          image={article.image}
          featured={true}
        />
      ))}
    </div>
  </section>

  <!-- Latest Articles -->
  <section class="bg-cream-100/50 border-y border-bark-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
      <h2 class="text-2xl sm:text-3xl font-bold text-bark-800 mb-8" style="font-family: var(--font-heading)">
        Latest Articles
      </h2>
      <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-6">
        {recent.map(article => (
          <ArticleCard
            title={article.title}
            description={article.description}
            slug={article.slug}
            category={article.category}
            readTime={article.readTime}
            emoji={article.emoji}
            image={article.image}
          />
        ))}
      </div>
      <div class="text-center mt-8">
        <a href="/blog/" class="inline-block bg-forest-600 text-white px-8 py-3 rounded-full font-medium hover:bg-forest-700 transition-colors">
          View All Articles ‚Üí
        </a>
      </div>
    </div>
  </section>

  <!-- About Teaser -->
  <section class="max-w-6xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
    <div class="flex flex-col md:flex-row items-center gap-8 md:gap-12">
      <div class="w-full md:w-2/5">
        <img
          src="/images/poppy/poppy-garden-portrait.jpg"
          alt="Poppy the black Labrador sitting in the garden with her tongue out"
          class="rounded-2xl shadow-lg w-full h-64 md:h-80 object-cover"
          loading="lazy"
          decoding="async"
        />
      </div>
      <div class="w-full md:w-3/5 text-center md:text-left">
        <h2 class="text-2xl sm:text-3xl font-bold text-bark-800 mb-4" style="font-family: var(--font-heading)">
          Meet Poppy ‚Äî The Dog Behind the Site
        </h2>
        <p class="text-bark-600 text-lg leading-relaxed mb-6">
          My Mutt Life started with one simple idea: dog owners deserve honest, practical advice ‚Äî not sponsored nonsense.
          Inspired by Poppy, our 9-year-old black Labrador, everything we write comes from real experience and genuine research.
          She's our chief product tester, our motivational paw-ker, and the face behind everything we do.
        </p>
        <a href="/about/" class="text-forest-600 font-semibold hover:text-forest-800 transition-colors inline-flex items-center gap-1">
          Our Story
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Dog Bed Calculator CTA -->
  <section class="max-w-6xl mx-auto px-4 sm:px-6 py-8 sm:py-12">
    <a href="/tools/dog-bed-calculator/" class="block group">
      <div class="relative bg-gradient-to-r from-forest-600 to-forest-700 rounded-2xl overflow-hidden p-6 sm:p-8 flex flex-col sm:flex-row items-center gap-6 hover:shadow-xl transition-shadow">
        <div class="w-20 h-20 sm:w-24 sm:h-24 rounded-full overflow-hidden border-4 border-white/30 shrink-0">
          <img src="/images/poppy/poppy-blanket-teeth.jpg" alt="Poppy under a blanket" class="w-full h-full object-cover" loading="lazy" />
        </div>
        <div class="text-center sm:text-left flex-1">
          <h2 class="text-xl sm:text-2xl font-bold text-white mb-2" style="font-family: var(--font-heading)">
            üõèÔ∏è Not sure what bed your dog needs?
          </h2>
          <p class="text-forest-100 text-sm sm:text-base">
            Try our free Dog Bed Size Calculator ‚Äî answer 4 quick questions and get a personalised recommendation with exact dimensions and top product picks.
          </p>
        </div>
        <div class="shrink-0">
          <span class="inline-flex items-center gap-2 bg-white text-forest-700 px-6 py-3 rounded-full font-semibold group-hover:bg-cream-100 transition-colors text-sm sm:text-base">
            Try it free
            <svg class="w-4 h-4 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
          </span>
        </div>
      </div>
    </a>
  </section>

  <!-- Topics Grid -->
  <section class="bg-gradient-to-br from-forest-50 to-cream-100 border-t border-bark-200">
    <div class="max-w-6xl mx-auto px-4 sm:px-6 py-12 sm:py-16">
      <h2 class="text-2xl sm:text-3xl font-bold text-bark-800 mb-8 text-center" style="font-family: var(--font-heading)">
        What We Cover
      </h2>
      <div class="grid grid-cols-2 lg:grid-cols-4 gap-4 sm:gap-6">
        {[
          { image: '/images/poppy/poppy-smiling-kitchen.jpg', title: 'Dog Nutrition', desc: 'Breed-specific food guides and honest reviews' },
          { image: '/images/category-health.jpg', title: 'Dog Health', desc: 'Supplements, senior care, and preventive health' },
          { image: '/images/poppy/poppy-yellow-lab-duo.jpg', title: 'Insurance', desc: 'UK provider comparisons to find the right cover' },
          { image: '/images/poppy/poppy-walkway.jpg', title: 'Lifestyle', desc: 'Walking gear, exercise guides, and seasonal tips' },
        ].map(topic => (
          <div class="group bg-white rounded-xl overflow-hidden border border-bark-200 hover:border-forest-300 hover:shadow-md transition-all">
            <div class="h-32 sm:h-40 overflow-hidden">
              <img
                src={topic.image}
                alt={topic.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                loading="lazy"
                decoding="async"
              />
            </div>
            <div class="p-4 sm:p-5 text-center">
              <h3 class="font-bold text-bark-700 mb-1" style="font-family: var(--font-heading)">{topic.title}</h3>
              <p class="text-bark-500 text-sm">{topic.desc}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
</BaseLayout>
