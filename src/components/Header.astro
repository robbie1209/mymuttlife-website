---
const currentPath = Astro.url.pathname;

const navLinks = [
  { href: '/', label: 'Home' },
  { href: '/blog/', label: 'Articles' },
  { href: 'https://mymuttlife.co.uk', label: 'ğŸ›’ Shop', external: true },
  { href: '/tools/paw-tracker/', label: 'ğŸ¾ PawTracker' },
  { href: '/tools/dog-bed-calculator/', label: 'Tools' },
  { href: '/about/', label: 'About' },
];
---

<header class="bg-white/90 backdrop-blur-sm border-b border-bark-200 sticky top-0 z-50">
  <nav class="max-w-6xl mx-auto px-4 sm:px-6 py-4 flex items-center justify-between">
    <!-- Logo -->
    <a href="/" class="flex items-center gap-2 group">
      <span class="text-2xl">ğŸ¾</span>
      <span class="text-xl sm:text-2xl font-bold text-forest-700 group-hover:text-forest-800 transition-colors" style="font-family: var(--font-heading)">
        My Mutt Life
      </span>
    </a>

    <!-- Desktop Nav -->
    <div class="hidden sm:flex items-center gap-6">
      {navLinks.map(link => (
        <a
          href={link.href}
          {...(link.external ? { target: '_blank', rel: 'noopener' } : {})}
          class:list={[
            'text-sm font-medium transition-colors hover:text-forest-600',
            link.external
              ? 'text-forest-600 font-semibold'
              : currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
                ? 'text-forest-700 border-b-2 border-forest-500 pb-1'
                : 'text-bark-600'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>

    <!-- Mobile menu button -->
    <button
      id="mobile-menu-btn"
      class="sm:hidden p-2 text-bark-600 hover:text-forest-600"
      aria-label="Toggle menu"
    >
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
      </svg>
    </button>
  </nav>

  <!-- Mobile Nav -->
  <div id="mobile-menu" class="hidden sm:hidden border-t border-bark-200 bg-white">
    <div class="px-4 py-3 flex flex-col gap-3">
      {navLinks.map(link => (
        <a
          href={link.href}
          {...(link.external ? { target: '_blank', rel: 'noopener' } : {})}
          class:list={[
            'text-sm font-medium py-2 transition-colors',
            link.external
              ? 'text-forest-600 font-semibold'
              : currentPath === link.href || (link.href !== '/' && currentPath.startsWith(link.href))
                ? 'text-forest-700'
                : 'text-bark-600 hover:text-forest-600'
          ]}
        >
          {link.label}
        </a>
      ))}
    </div>
  </div>
</header>

<script>
  const btn = document.getElementById('mobile-menu-btn');
  const menu = document.getElementById('mobile-menu');
  btn?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>
